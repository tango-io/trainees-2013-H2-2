%h3 
  = @name_section
%p.subtitle 
  = @subtitle
.col-lg-9
  %ul
    %h3 Staff Picks
    - @projects_section.each do |project|
      %li
        %a{:href => "#{project_path(project)}"}
          .project-bg
            .project-wrap
              =image_tag "#{project.picture}", class: 'img-project img-responsive'
              %h5 
                %strong #{project.name}
                %span By #{project.user_id}
              %p #{project.description}
              .progress
                #{project.period}

