%section.container
  %h3#title
    = raw @project.name
  %h5#small-title
    by
    = @project.user.name
%br   
%section.container-2.show-project
  .wrap-section
    .content-project.col-lg-8
      %h2 Alrighty!
      %h5 Enter your pledge amount
      =form_for [@project, @backer] do |f|
        = if @backer.errors.any?
          .error_explanation
            %h2 
              Prohibited this project from being saved:
              = pluralize(@backer.errors.count, "error") 
            %ul 
            = @backer.errors.full_messages.each do |msg|
              %li 
                = msg

        =f.text_field :amount
        %h3 Select your reward:
        =f.radio_button(:pledge_id, 0)
        =f.label "No reward"
        %br
        -@project.pledges.each do |r|
          %p
            =f.radio_button(:pledge_id, r.id)
            %b=r.name
            =r.description
        =f.hidden_field :project_id, :value => @project.id
        =f.hidden_field :user_id, :value => current_user.id
        =f.submit :value => "Send"

