.container
  %h1.title Meet your new project
  %section.row.create-project
    = form_for @project do |f|
      = if @project.errors.any?
        .error_explanation
          %h2 
            Prohibited this project from being saved:
            = pluralize(@project.errors.count, "error") 
          %ul 
          = @project.errors.full_messages.each do |msg|
            %li 
              = msg

      .col-lg-3
        %p
          =f.label :name
          =f.text_field :name , class: 'form-control'
        %p
          =f.label :description
          =f.text_field :description , class: 'form-control'
      .col-lg-1
      .col-lg-3
        %p 
          =f.label :goal
          =f.text_field :goal, class: 'form-control'
        %p 
          =f.label :period
          =f.text_field :period, class: 'form-control'
        %p 
          =f.label :subcategory_id
          \#{f.collection_select :subcategory_id , @subcategories, :id,:name, class: 'btn btn-default btn-sm dropdown-toggle' }
      .col-lg-1
      .col-lg-3
        %p 
          =f.label :imagen 
          =f.file_field :picture
          =f.hidden_field :picture_cache
        %p 
          =f.label :video, 'Video (url)'
          =f.text_field :video, class: 'form-control'
        %br/
      .col-lg-10
        %p
          =f.label :content
          =f.text_area :content, :size => "10x10", class: 'form-control'
        %p
          =f.label :faqs, 'FAQS'
          =f.text_area :faqs, :size => "10x10", class: 'form-control' 
          =f.submit 'Send', class: 'btn btn-primary dropdown-toggle align'
        :javascript
          $('#project_content').wysihtml5();
