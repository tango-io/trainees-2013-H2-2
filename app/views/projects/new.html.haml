%h1 Create project
%section
  = form_for @project do |f|
    %p
      =f.label :name
      =f.text_field :name 
    %p
      =f.label :description
      =f.text_field :description
    %p
      =f.label :content
      =f.text_area :content, :size => "70x30"
    %p 
      =f.label :imagen 
      =f.file_field :picture
      =f.hidden_field :picture_cache
    %p 
      =f.label :video
      =f.text_field :video
    %p 
      =f.label :goal
      =f.text_field :goal
    %p 
      =f.label :period
      =f.text_field :period
    %p 
      =f.label :categories
      \#{f.collection_select :category_id , @categories, :id,:name}
      =f.submit 
    %br/
